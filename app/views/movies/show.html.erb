<div>
  <h1><%= @movie.name %></h1>
  <p><%= @movie.creation_year %></p>
  <p><%= @movie.genre %></p>
  <p><%= @movie.average_age %></p>
</div>
<div>
  <%= @movie.young_to_old.each do |actor| %>
    <p><%= actor.name %></p>
  <% end %>
</div>
<div>
  <%= form_tag "/movies/#{@movie.id}", method: :patch do  %>
    <p>Enter an actor name: <%= text_field_tag :name %></p>
    <%= submit_tag 'Add Actor' %>
  <% end %>
</div>